#header
    position relative
    .mobile-fixed-header
        position fixed
        height 10vh
        border-bottom solid 1px white
        background-color black
        width 100vw
        float left 
        top 0
        left 0
        z-index 999
        .header-switch
            position relative
            height 10vh
            left 0
            top 0
            width 20vw
            padding 2vw
            text-align center
            z-index 1001
            a   
                width 100%
                float left 
                text-align center
                color white
                font-size 9vw
        .mobile-header-logo
            display block
            height 10vw
            position fixed
            left 0
            top 0
            .container
                height 100%
                .row
                    .logo-square
                        text-align center
                        a 
                            display block
                            img 
                                max-height 10vh
                                width auto
                                padding 2vh 0vh 2vh 4vh



