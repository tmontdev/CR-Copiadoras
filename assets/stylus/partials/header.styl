header
	//Mobile header
	.header-mobile
		background-color white
		position fixed
		top 0
		left 0
		height 10vh
		box-shadow 1px 1px 10px white
		z-index 1090
		border-bottom solid 1px black
		.row
			.mobile-switch
				height 10vh
				border-right black solid 1px
				a.menu-switch
					display block
					color black
					font-size 5vh
					text-decoration none
					padding 1.5vh
			.mobile-header-logo
				img
					max-width 7vh
					max-eight 7vh
					padding 1.5vh 0vh
	//header desktop
	.header-content
		z-index 998
		@media(max-width: 991px)
			z-index 1051
			width 100vw
			top 0
			left 0
			height 100%
		.mobile-scroll
			@media(max-width: 991px)
				background-color white
				display block
				height 100vh
				float left 
				width 100vw
				position fixed
				left 0
				top 0
				overflow auto
				padding-top 10vh
				z-index 1100
			.header-menu-area
				background-color black
				@media(min-width: 992px)
					position fixed
					top 0
					left 0
					width 100vw	
					border-bottom  1px solid black
					height 50px	
					float left	
					z-index 1051
					display block
					padding 0
					margin 0
				.container
					@media(min-width: 991px)
						height 100%
					.header-menu
						padding 0
						margin 0
						height 100%
						nav
							@media(min-width: 991px)
								height 100%
							.header-menu-list
								@media(min-width: 991px)
									height 100%
								list-style none
								li
									text-align center
									@media(min-width: 991px)
										height 100%
									text-transform uppercase
									@media(min-width 992px)
										display inline-block
									.col-xs-4
										@media(min-width: 991px)
											height 100%
											a 
												width 100%
												float left
												height 100%
									a
										@media(min-width: 991px)
											height 100%
											padding 16px 0px
											width 100%
										float left
										display block
										text-align center
										position relative
										&:after 
											content " "
											background-color black
											width 100%
											position absolute
											left 0
											bottom 0px 
											height 0px
											opacity 0
											transition all 250ms ease-in-out											
										&:hover
											text-decoration none
											&:after
												height 5px
												opacity 1

										span 
											color black
			.header-info-area
				@media(min-width: 992px)
					width 100vw
					float left
					background-color blacke
					border-bottom  1px solid black
					height 100px
				.row
					width 100%
					float left
					.header-info-logo
						text-align center
						img
							max-height 80px
							margin 10px
					.header-info-address
						a
							color black
							text-decoration none
							width 100%
							float left 
							height 100px
							display block
							padding 25px 0 25px 25px
						.fa-map-marker
							position absolute
							top 38%
							left 10px
							font-size 25px
							color black
					.header-info-contact
						.contact-phone
							color black
							text-decoration none
							width 100%
							float left
							height 50%
							padding 25px 0 0 25px
						.contact-mail
							color black
							text-decoration none
							width 100%
							float left
							height 50%
							padding 0 0 25px 25px
						.fa-phone
							position absolute
							top 38%
							left 10px
							font-size 25px
							color black				
					.header-info-block:not(.header-info-logo)
						&:after
							content " "
							background-color black
							width 90%
							float left
							position absolute
							left 0
							bottom 0
							height 0px
							opacity 0
							transition all 250ms ease-in-out
						&:hover
							&:after
								height 5px
								opacity 1

					 
					
		