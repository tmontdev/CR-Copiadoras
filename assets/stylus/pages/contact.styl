.contact
  font-family: $font1
  .contact-presentation
    margin 2% 0
    border-bottom solid 1px grey
  .write-for-us
    .left-side
      font-family $font1
      h3
        color black
        font-family $font2
      a
        color grey
        &:hover
          text-decoration none
    .contact-form
      .form-field
        padding 5px
        input, textarea
          padding 5px 10px
          font-family $font2
          font-size 14px
          transition all 250ms ease-in-out
          border solid 1px grey
          color #1f1f1f
          &:hover, &:focus
            border 1px solid black
            color black
        .form-send
          background-color #252525
          color white
          border solid 1px grey
          &:hover, &:focus
            box-shadow 0px 0px 5px black
            color white
            border solid 1px black
            background-color black
// custorimzação de formulário
  .avaliable
    margin 2% 0
    h4
      padding-bottom 20px
      display block
      position relative
      color black
      &:after
        content""
        size 100
        position absolute
        top 30px
        left 0
        height 1px
        background-color black
    .col-field
      .line-query
        margin 2% 0
        h5
          color black
        span
          color grey
        .pad
          width 100%
          float left
          padding-left 30px
        a
          .circle
            border solid 1px black
            transition all 250ms ease-in-out
            color black
          &:hover
            .circle
              background-color black
              box-shadow 0px 0px 05 black
              color white
