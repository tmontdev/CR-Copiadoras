#about
	@media(max-width:992px)
		margin-top 10vh !important
	.about-content
		padding 0
		margin 0
		.about-item
			.container
				.about-item-field
					margin 40px 0
					.about-item-content
						.text-title
							padding 20px 0
							color black
							position relative
							&:after
								content ' '
								background-color #191919
								position absolute
								bottom 0
								height 3px
								width 300px
								left 0
								@media(max-width: 991px)
									left 10%
									width 200px
						.text-subtitle
							color grey
							padding 30px 0
							text-align justify
							font-family $font1
					.about-item-pic
						.about-item-img
							display block
							max-width 100%
							max-height 100%
