.whole-block
	width 100%
	float left
.text-center
	text-align center
.text-left
	text-align left
.text-right
	text-align right
.no-padding
		padding 0 !important
		margin 0 !important
.first-section
	@media(min-width:992px)
		margin-top 25vh
	@media(max-width:991px)
		margin-top 10vh
.presentation-title
	text-align center
	color black
	@media(min-width:992px)
		font-size 3vw
	@media(max-width:991px)
		font-size 10vw
.presentation-subtitle
	width 100%
	float left
	color alpha(black, 50%)
	border-bottom 1px solid black
	@media(max-width: 991px)
		text-align justify
	@media(min-width:992px)
		text-align center
 
