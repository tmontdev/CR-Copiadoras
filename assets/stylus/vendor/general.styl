.whole-block
	width 100%
	float left
.text-center
	text-align center
.text-left
	text-align left
.text-right
	text-align right
.no-padding
		padding 0 !important
		margin 0 !important
.page-presentation
	margin 2% 0px
.first-section
	@media(min-width:992px)
		margin-top 25vh
	@media(max-width:991px)
		margin-top 10vh
.presentation-title
	text-align center
	font-family $font2 !important
	color black
	@media(min-width:992px)
		font-size 3vw
	@media(max-width:991px)
		font-size 10vw
.presentation-subtitle
	width 100%
	font-family: $font1
	float left
	color alpha(black, 50%)
	border-bottom 1px solid black
	@media(max-width: 991px)
		text-align justify
	@media(min-width:992px)
		text-align center
.circle
	width 45px
	height 45px
	float left
	line-height 45px !important
	font-size 22px !important
	border-radius 50%
	display block
	margin 0 auto
	text-align center
.shadown
	background-color #fafafa !important

.text-title
	font-family $font2
	.text-subtitle
		font-family $font1
